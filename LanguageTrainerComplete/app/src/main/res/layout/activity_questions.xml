<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bit.laxmmr1.languagetrainer.QuestionsActivity">


    <TextView
        android:text="Question 1 of 11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:id="@+id/textViewQuestionBar"
        android:textColor="#190c0c" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:src="@drawable/der_apfel"
        android:layout_below="@+id/textViewQuestionBar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Please select the correct ARTICLE for the visualisation above?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/textViewQuestionOne"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#1b0909" />

    <RadioGroup
        android:id="@+id/rdGroup_Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewQuestionOne"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="die"
                android:textSize="20sp"
                android:id="@+id/radioButtonDie"
                android:layout_below="@+id/textViewQuestionOne"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="24dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="der"
                android:textSize="20sp"
                android:id="@+id/radioButtonDer"
                android:layout_below="@+id/radioButtonDie"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="das"
                android:textSize="20sp"
                android:id="@+id/radioButtonDas"
                android:layout_below="@+id/radioButtonDer"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT QUESTION"
        android:id="@+id/buttonNextQuestion"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/rdGroup_Gender"
        android:layout_toStartOf="@+id/rdGroup_Gender" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/buttonSubmit"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />


</RelativeLayout>
